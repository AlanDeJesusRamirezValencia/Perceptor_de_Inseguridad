<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LevelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/roboto_black"
            android:text="@string/nivel_percepcion"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/button_closeLevelPerception"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="-35dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/exit"
            android:src="@drawable/close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_level1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="-90dp"
            android:layout_marginBottom="-80dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/uno"
            android:textColor="@color/activityBackground"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_level2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="-80dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/dos"
            android:textColor="@color/activityBackground"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_level3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="-90dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/tres"
            android:textColor="@color/activityBackground"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_level4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="-45dp"
            android:layout_marginBottom="-80dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/cuatro"
            android:textColor="@color/activityBackground"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_level5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="-45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/cinco"
            android:textColor="@color/activityBackground"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>