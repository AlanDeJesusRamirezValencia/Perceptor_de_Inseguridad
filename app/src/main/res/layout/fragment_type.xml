<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/roboto_black"
            android:text="@string/type_of_danger"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btn_closeTypeOfDanger"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="-35dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:contentDescription="@string/exit"
            android:src="@drawable/close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_humanDanger"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="-55dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/humanDanger"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_localDanger"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginEnd="-55dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/localDanger"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_asault"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="-110dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/asault"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_vandalism"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/vandalismo"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_harassment"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginEnd="-110dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/acoso"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_druggedDrunkPeople"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="-60dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/personasAD"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_unintentionalViolene"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginEnd="-60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/violenciaNoIntencional"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_pedestrianHazard"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginStart="-110dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/peligroPeatonal"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_healtHazard"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginBottom="-70dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/peligroSanitario"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_highPollution"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginEnd="-110dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_add_location"
            android:fontFamily="@font/roboto_black"
            android:text="@string/altaContaminacion"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_skip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/roboto_black"
            android:text="@string/skip"
            android:textColor="@color/colorSecondaryDark" />

    </LinearLayout>

</LinearLayout>