<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpThreeFragment"
    android:orientation="vertical"
    android:background="@color/activityBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_black"
            android:text="@string/sing_up_title"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

            <EditText
                android:id="@+id/nacionalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints="nationality"
                android:hint="@string/nacionalidad"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/colorSecondaryLight"
                android:textColor="@color/colorSecondaryDark"
                />

            <EditText
                android:id="@+id/ocupacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints="nationality"
                android:hint="@string/ocupacion"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/colorSecondaryLight"
                android:textColor="@color/colorSecondaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/nivel_socioeconomico"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioButtonBajo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bajo" />

                <RadioButton
                    android:id="@+id/radioButtonMedio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/medio" />

                <RadioButton
                    android:id="@+id/radioButtonAlto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alto" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonRegistrar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/container1"
                android:fontFamily="@font/roboto_black"
                android:text="@string/continuar"
                android:textColor="@color/activityBackground" />

            <Button
                android:id="@+id/buttonOmitirYRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:text="@string/omitir_y_registrar"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="16sp" />

        </LinearLayout>

</ScrollView>
